    <script>
        document.addEventListener('DOMContentLoaded', () => {
            // Intersection Observer for Reveal Logic
            const reveals = document.querySelectorAll('.reveal');
            const revealObserver = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        entry.target.classList.add('active');
                    }
                });
            }, { threshold: 0.1 });
            reveals.forEach(el => revealObserver.observe(el));

            // URL Params & Personalization
            const params = new URLSearchParams(window.location.search);
            const name = params.get('name');
            const accessType = params.get('access');

            if (name) {
                const greetSpan = document.getElementById('personalized-greet');
                if (greetSpan) greetSpan.textContent = "Hey " + name + ", ready to";
            }

            // WhatsApp Message Logic
            const whatsappBtn = document.getElementById('whatsapp-link');
            const whatsappPopup = document.getElementById('whatsapp-popup');
            const whatsappBadge = document.getElementById('whatsapp-badge');
            const closeWhatsapp = document.getElementById('close-whatsapp');
            
            let isClosedManually = false;

            if (whatsappBtn) {
                let message = accessType === 'vip' 
                    ? "Hey Chris, I'm scrolling through the 6-Week Foundations page‚ÄîI have a few questions about how the VIP early access works?" 
                    : "Hey Chris, I'm reading through the 6-Week Foundations roadmap. Just wanted to ask a quick question about the schedule / equipment before I join?";
                whatsappBtn.href = `https://wa.me/447925116794?text=${encodeURIComponent(message)}`;
            }

            // --- IMPROVED SWIPE LOGIC ---
            let touchStartX = 0;
            let touchStartY = 0;
            const swipeThreshold = 50;

            whatsappPopup.addEventListener('touchstart', (e) => {
                touchStartX = e.changedTouches[0].screenX;
                touchStartY = e.changedTouches[0].screenY;
            }, { passive: true });

            whatsappPopup.addEventListener('touchend', (e) => {
                const touchEndX = e.changedTouches[0].screenX;
                const touchEndY = e.changedTouches[0].screenY;
                const diffX = touchEndX - touchStartX;
                const diffY = touchEndY - touchStartY;

                // Check if swipe is more horizontal than vertical
                if (Math.abs(diffX) > Math.abs(diffY)) {
                    if (diffX > swipeThreshold) {
                        // Swiped Right
                        whatsappPopup.classList.add('swipe-right');
                        dismissPopup(true);
                    } else if (diffX < -swipeThreshold) {
                        // Swiped Left
                        whatsappPopup.classList.add('swipe-left');
                        dismissPopup(true);
                    }
                }
            }, { passive: true });

            const dismissPopup = (swiped = false) => {
                isClosedManually = true;
                // If closed via "X" button, use a standard fade
                if (!swiped) {
                    whatsappPopup.classList.remove('visible');
                }
                // Badge remains active/visible as per request
            };

            closeWhatsapp.addEventListener('click', (e) => {
                e.preventDefault();
                dismissPopup(false);
            });

            // Scroll Logic for Pop-up Trigger (60%)
            window.addEventListener('scroll', () => {
                const scrollPercent = (window.scrollY / (document.documentElement.scrollHeight - window.innerHeight)) * 100;
                
                // Show/Hide logic for the Message
                if (scrollPercent >= 60 && scrollPercent <= 92 && !isClosedManually) {
                    whatsappPopup.classList.add('visible');
                } else {
                    whatsappPopup.classList.remove('visible');
                }

                // Logic for the Badge: Once we pass 60%, it stays visible unless at bottom
                if (scrollPercent >= 60 && scrollPercent <= 98) {
                    whatsappBadge.classList.add('active');
                } else {
                    whatsappBadge.classList.remove('active');
                }
            });

            document.getElementById('current-year').textContent = new Date().getFullYear();

            document.querySelectorAll('a[href^="#"]').forEach(anchor => {
                anchor.addEventListener('click', function (e) {
                    e.preventDefault();
                    const target = document.querySelector(this.getAttribute('href'));
                    if (target) target.scrollIntoView({ behavior: 'smooth' });
                });
            });
        });
    </script>
</body>
